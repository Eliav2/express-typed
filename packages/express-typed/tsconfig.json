{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "noErrorTruncation": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
